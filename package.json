{
  "name": "plain-text-diagrams",
  "displayName": "plain-text-diagrams",
  "description": "Syntax Highlighting for .ptd (Plain Text Diagram) files",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
	"keywords": [
		"diagrams",
		"plain test",
		"code mapping",
		"uml"
	],
	"publisher": "wware",
	"icon": "images/icon.png",
	"author": {
		"name": "Andy Bulka",
		"url": "https://github.com/abulka",
		"email": "abulka@gmail.com"
	},
  "main": "./src/extension.js",
  "contributes": {
    "languages": [{
      "id": "ptd",
      "aliases": ["Plain Text Diagram", "ptd"],
      "extensions": [".ptd",".pt-diagram"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "ptd",
      "scopeName": "text.ptd",
      "path": "./syntaxes/ptd.tmLanguage.json"
    }],
    "configurationDefaults": {
      "[ptd]": {
        "editor.defaultFormatter": "wware.plain-text-diagrams"
      }
    }    
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abulka/vscode-pt-diagrams"
  }
}
