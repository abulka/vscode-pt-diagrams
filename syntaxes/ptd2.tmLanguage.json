{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Basic Brackets and Expressions",
    "patterns": [
        {
            "include": "#expressions"
        }
    ],
    "repository": {
        "expressions": {
            "patterns": [
                {
                    "name": "keyword.expression",
                    "match": "\\b(description|name|version|files):\\s"
                },
                {
                    "name": "text.ptd.plain",
                    "begin": "(?<=\\b(description|name|version|files):\\s)",
                    "end": "$",
                    "patterns": [
                        {
                            "name": "text.ptd.plain",
                            "match": ".+"
                        }
                    ]
                }
            ]
        }
    },
    "scopeName": "text.ptd"
}