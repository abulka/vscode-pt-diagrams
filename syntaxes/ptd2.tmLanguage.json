{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Basic Brackets and Expressions",
	"patterns": [
		{
			"include": "#description"
		},
		{
			"include": "#plain_text"
		}
	],
	"repository": {
		"plain_text": {
			"patterns": [
				{
					"name": "text.plain",
					"match": "[^\\[\\]\\(\\)\\{\\}]+"
				}
			]
		},
		"description": {
			"patterns": [
				{
					"name": "keyword.description",
					"match": "\\bdescription:\\s"
				},
				{
					"name": "text.plain",
					"begin": "(?<=description:\\s)",
					"end": "$",
					"patterns": [
						{
							"include": "#plain_text"
						}
					]
				}
			]
		}
	},
	"scopeName": "text.ptd"
}